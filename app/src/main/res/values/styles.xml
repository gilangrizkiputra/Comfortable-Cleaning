<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomNavigationTextStyle" parent="Widget.Design.BottomNavigationView">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
    </style>

    <style name="CustomTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxBackgroundColor">@android:color/white</item>
        <item name="hintTextColor">@color/white</item>
        <item name="endIconTint">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="counterTextColor">@color/white</item>
        <item name="helperTextTextColor">@color/white</item>
    </style>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="bottomNavigationStyle">@style/CustomBottomNavigation</item>
    </style>

    <!-- Custom Bottom Navigation Style -->
    <style name="CustomBottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconSize">24dp</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationView.Active</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationView.Inactive</item>
        <item name="itemPaddingTop">0dp</item>
        <item name="itemPaddingBottom">0dp</item>
        <item name="itemHorizontalTranslationEnabled">false</item>
    </style>

    <!-- Active and Inactive Item Text Appearance -->
    <style name="BottomNavigationView.Active" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">2dp</item> <!-- Add margin to label -->
    </style>

    <style name="BottomNavigationView.Inactive" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">2dp</item> <!-- Add margin to label -->
    </style>

</resources>
