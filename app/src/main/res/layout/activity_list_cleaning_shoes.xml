<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Customer.ListCleaningShoes.ListCleaningShoesActivity">

    <ImageView
        android:id="@+id/iv_background_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/background_color_blue_top"
        android:layout_alignParentEnd="true"/>

    <ImageView
        android:id="@+id/iv_background_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/background_color_blue_down"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp">

        <LinearLayout
            android:id="@+id/judul_cleaning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cleaning"
                android:fontFamily="@font/poppins_semi_bold"
                android:textSize="19sp"
                android:textColor="@color/black"
                android:layout_marginStart="110dp"
                android:gravity="center" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/judul_cleaning"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/item1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">
                    <LinearLayout
                        android:background="@drawable/custom_cornerradius_top"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fast Cleaning"
                            android:fontFamily="@font/poppins_semi_bold"
                            android:textSize="19sp"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="96dp"
                        android:orientation="horizontal"
                        android:background="@drawable/custom_corneradius_buttom"
                        android:gravity="center_vertical"
                        android:paddingStart="8dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/image_tipe_cleaning_shoes"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="London"
                                android:fontFamily="@font/poppins_regular"
                                android:textSize="19sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rp. 30.000"
                                android:fontFamily="@font/poppins_semi_bold"
                                android:textSize="22sp"
                                android:textColor="@color/primaryBlue"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="end">
                            <androidx.appcompat.widget.AppCompatButton
                                android:layout_width="87dp"
                                android:layout_height="32dp"
                                android:background="@drawable/custom_estimasi_list_cleaning"
                                android:drawableLeft="@drawable/ic_estimasi_waktu"
                                android:elevation="0dp"
                                android:fontFamily="@font/poppins_regular"
                                android:paddingVertical="8dp"
                                android:paddingLeft="11dp"
                                android:text="2-3 Hari"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="11sp"
                                android:layout_gravity="bottom"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/item2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">
                    <LinearLayout
                        android:background="@drawable/custom_cornerradius_top"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fast Cleaning"
                            android:fontFamily="@font/poppins_semi_bold"
                            android:textSize="19sp"
                            android:textColor="@color/white"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="96dp"
                        android:orientation="horizontal"
                        android:background="@drawable/custom_corneradius_buttom"
                        android:gravity="center_vertical"
                        android:paddingStart="8dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/image_tipe_cleaning_shoes"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="London"
                                android:fontFamily="@font/poppins_regular"
                                android:textSize="19sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rp. 30.000"
                                android:fontFamily="@font/poppins_semi_bold"
                                android:textSize="22sp"
                                android:textColor="@color/primaryBlue"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="end">
                            <androidx.appcompat.widget.AppCompatButton
                                android:layout_width="87dp"
                                android:layout_height="32dp"
                                android:background="@drawable/custom_estimasi_list_cleaning"
                                android:drawableLeft="@drawable/ic_estimasi_waktu"
                                android:elevation="0dp"
                                android:fontFamily="@font/poppins_regular"
                                android:paddingVertical="8dp"
                                android:paddingLeft="11dp"
                                android:text="2-3 Hari"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="11sp"
                                android:layout_gravity="bottom"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/item3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">
                    <LinearLayout
                        android:background="@drawable/custom_cornerradius_top"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fast Cleaning"
                            android:fontFamily="@font/poppins_semi_bold"
                            android:textSize="19sp"
                            android:textColor="@color/white"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="96dp"
                        android:orientation="horizontal"
                        android:background="@drawable/custom_corneradius_buttom"
                        android:gravity="center_vertical"
                        android:paddingStart="8dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/image_tipe_cleaning_shoes"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="London"
                                android:fontFamily="@font/poppins_regular"
                                android:textSize="19sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rp. 30.000"
                                android:fontFamily="@font/poppins_semi_bold"
                                android:textSize="22sp"
                                android:textColor="@color/primaryBlue"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="end">
                            <androidx.appcompat.widget.AppCompatButton
                                android:layout_width="87dp"
                                android:layout_height="32dp"
                                android:background="@drawable/custom_estimasi_list_cleaning"
                                android:drawableLeft="@drawable/ic_estimasi_waktu"
                                android:elevation="0dp"
                                android:fontFamily="@font/poppins_regular"
                                android:paddingVertical="8dp"
                                android:paddingLeft="11dp"
                                android:text="2-3 Hari"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="11sp"
                                android:layout_gravity="bottom"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</RelativeLayout>
