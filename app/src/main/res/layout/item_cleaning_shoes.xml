<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/item1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20dp">
        <LinearLayout
            android:background="@drawable/custom_cornerradius_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_list_judul_cleaning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fast Cleaning"
                android:fontFamily="@font/poppins_semi_bold"
                android:textSize="19sp"
                android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:orientation="horizontal"
            android:background="@drawable/custom_corneradius_buttom"
            android:gravity="center_vertical"
            android:paddingStart="8dp">

            <ImageView
                android:id="@+id/iv_list_cleaning"
                android:layout_width="82dp"
                android:layout_height="83dp"
                android:src="@drawable/image_categori_cleaning"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10dp">

                <TextView
                    android:id="@+id/tv_list_nama_produk_cleaning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="London"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="19sp"/>

                <TextView
                    android:id="@+id/tv_list_harga_cleaning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp. 30.000"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:textSize="22sp"
                    android:textColor="@color/primaryBlue"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@color/white"
                    app:cardElevation="0dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_estimasi_list_cleaning"
                        android:orientation="horizontal"
                        android:padding="10dp">
                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_estimasi_waktu"
                            android:contentDescription="Icon"
                            android:layout_gravity="center_vertical"/>

                        <TextView
                            android:id="@+id/tv_estimasi_cleaning"
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:text="2-3 Hari"
                            android:textColor="@color/white"
                            android:textSize="11sp"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_marginStart="4dp"
                            android:layout_gravity="center_vertical"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>